@model Department
@{
    ViewData["Title"] = "Add New Department";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-primary text-center">Add New Department</h2>

        <form asp-action="SaveAdd" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Department Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter department name" required />
            </div>

            <div class="mb-3">
                <label for="ManagerName" class="form-label">Manager Name</label>
                <input type="text" asp-for="ManagerName" class="form-control" placeholder="Enter manager name" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success">Add Department</button>
                <a href="/Department/ShowAll" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
