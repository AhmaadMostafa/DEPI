@model List<Student>
@{
    ViewData["Title"] = "Students";
}
<h2>Students List</h2>
<div class="mb-3">
    <a href="/Student/Add" class="btn btn-success">Add New Student</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Department?.Name</td>
                <td><a href="/Student/GetById/@item.Id">Details</a></td>
                <td><a class="text-danger" href="/Student/Delete/@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

